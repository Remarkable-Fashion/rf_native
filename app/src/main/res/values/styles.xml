<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_bar_label">
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="spoqa_14sp_blod_default">
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="spoqa_14_medium" parent="app_bar_label">
        <item name="android:fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textColor">@color/sub_text</item>
    </style>

    <style name="subtitle" parent="app_bar_label">
        <item name="android:fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey_text</item>
    </style>

    <style name="main_bottom_menu_label">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey_text</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="montserrat_bold_label">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_text</item>
    </style>
    <style name="montserrat_bold_label_grey" parent="montserrat_bold_label">
        <item name="android:textColor">@color/light_text</item>
    </style>
    <style name="montserrat_bold_14" parent="montserrat_bold_label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_text</item>
    </style>
    <style name="montserrat_medium_text">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="montserrat_medium_12">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_grey_text</item>
    </style>
    <style name="spoqa_12sp_label">
        <item name="fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_grey_text</item>
    </style>
    <style name="spoqa_12sp_default" parent="spoqa_12sp_label">
        <item name="android:textColor">@color/default_text</item>
    </style>
    <style name="spoqa_12sp_label_bold" parent="spoqa_12sp_label">
        <item name="fontFamily">@font/spoqahansansneo_bold</item>
    </style>
    <style name="spoqa_12sp_purple" parent="spoqa_12sp_label_bold">
        <item name="android:textColor">@color/lf_purple</item>
    </style>
    <style name="spoqa_12sp_lf_grey" parent="spoqa_12sp_label_bold">
        <item name="android:textColor">@color/lf_grey</item>
    </style>
    <style name="spoqa_16sp_sub_label">
        <item name="fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey_text</item>
    </style>
    <style name="spoqa_14sp_default_color">
        <item name="fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_text</item>
    </style>




    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@drawable/selector_chip_text_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="android:textAppearance">@style/spoqa_14_medium</item>
        <item name="chipStrokeColor">@drawable/selector_chip_color</item>
    </style>
    <style name="customChipChoice_purple" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/lf_purple</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAppearance">@style/spoqa_12sp_purple</item>
        <item name="chipStrokeColor">@color/lf_purple</item>
    </style>
    <style name="CustomChipChoice_grey" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_grey</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="android:textAppearance">@style/spoqa_12sp_default</item>
        <item name="chipStrokeColor">@color/background_grey</item>
    </style>
    <style name="edittext_style">
        <item name="fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textCursorDrawable">@color/default_text</item>
        <item name="android:textSelectHandle">@color/lf_orange</item>
        <item name="android:textColorHighlight">@color/lf_orange</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <!--바텀시트 모서리 radius style-->
    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="radi13">
        <item name="cornerSize">13dp</item>
    </style>
    <style name="radi20">
        <item name="cornerSize">20dp</item>
    </style>
</resources>