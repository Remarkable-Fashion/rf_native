<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/home_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
      >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_sandwich" />

            <TextView
                android:id="@+id/app_bar_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/random_fashion"
                android:textColor="@color/default_text"
                android:textSize="19sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo_filter"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="17dp"
                android:src="@drawable/ic_filter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:src="@drawable/ic_ellipse_purple"
                app:layout_constraintStart_toEndOf="@id/photo_filter"
                app:layout_constraintTop_toTopOf="@id/photo_filter" />

            <TextView
                android:id="@+id/app_bar_following"
                style="@style/app_bar_label"
                android:textColor="@drawable/selector_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="팔로잉"
                app:layout_constraintStart_toEndOf="@id/ic_new"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="12dp"
                android:clickable="true"
                android:textIsSelectable="true"
                />

            <TextView
                android:id="@+id/app_bar_random"
                style="@style/app_bar_label"
                android:textColor="@drawable/selector_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="12dp"
                android:text="랜덤"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/ic_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/montserrat_bold"
                android:text="N"
                android:textColor="@color/design_default_color_primary"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@id/app_bar_random"
                app:layout_constraintTop_toTopOf="@id/app_bar_random" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/photo_grid_mode_btn"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_black_radi2"
                android:fontFamily="@font/montserrat_bold"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/photo_filter"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.helper.widget.Layer
                android:id="@+id/top_random_menu_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="ic_new,app_bar_random"

                tools:ignore="MissingConstraints"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/home_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/home_vertical_item"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/home_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/home_grid_item"
        app:spanCount="3"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        />
</androidx.constraintlayout.widget.ConstraintLayout>