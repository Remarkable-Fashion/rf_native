<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_radi5_white"
    android:paddingTop="15dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="15dp">
    <TextView
        android:id="@+id/gender_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/app_bar_label"
        android:textSize="18sp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/gender_selection_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gender_selection_title"
        app:layout_constraintStart_toStartOf="@id/gender_selection_title"
        android:layout_marginTop="7dp"
        android:text="문제를 자세히 알려주세요."
        style="@style/spoqa_14_medium"
        android:textColor="#666"
        android:layout_marginEnd="29dp"
        />
    <EditText
        android:id="@+id/declare_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gender_selection_sub_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:maxLines="8"
        tools:text="ddddddddddddddddddddddddddddddddddddddddddddddddd"
        android:background="@color/background_grey"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>