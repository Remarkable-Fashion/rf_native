<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="category"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/product_category"
            style="@style/montserrat_bold_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{category}"
            tools:text="Outer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_card_btn"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/ic_add_item"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@id/bg"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="@drawable/bg_radi3_line"
            app:layout_constraintTop_toBottomOf="@id/product_category" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/photo_back_grey"
            app:layout_constraintTop_toTopOf="@id/bg"
            app:layout_constraintStart_toStartOf="@id/bg"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="7dp"
            android:layout_marginStart="11dp"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toTopOf="@id/product_image"
            style="@style/montserrat_medium_12" />

        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/name_label"
            app:layout_constraintTop_toBottomOf="@id/name_label"
            style="@style/montserrat_medium_12" />

        <TextView
            android:id="@+id/color_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/price_label"
            app:layout_constraintTop_toBottomOf="@id/price_label"
            style="@style/montserrat_medium_12" />

        <TextView
            android:id="@+id/size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/color_label"
            app:layout_constraintTop_toBottomOf="@id/color_label"
            style="@style/montserrat_medium_12" />

        <EditText
            android:id="@+id/name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="dd"
            app:layout_constraintStart_toEndOf="@id/name_label"
            app:layout_constraintBaseline_toBottomOf="@id/name_label"
            android:textColor="@color/default_text"
            style="@style/spoqa_12sp_label"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="ddd"
            app:layout_constraintStart_toEndOf="@id/price_label"
            app:layout_constraintBaseline_toBaselineOf="@id/price_label"
            android:textColor="@color/default_text"
            style="@style/spoqa_12sp_label"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/color_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/color_label"
            app:layout_constraintBaseline_toBaselineOf="@id/color_label"
            android:textColor="@color/default_text"
            style="@style/spoqa_12sp_label"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/size_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/size_label"
            app:layout_constraintBaseline_toBaselineOf="@id/size_label"
            android:textColor="@color/default_text"
            style="@style/spoqa_12sp_label"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/url_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Url"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/product_image"
            app:layout_constraintTop_toBottomOf="@id/product_image"
            style="@style/montserrat_medium_12" />

        <EditText
            android:id="@+id/url_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/url_label"
            app:layout_constraintBaseline_toBaselineOf="@id/url_label"
            android:textColor="@color/default_text"
            style="@style/spoqa_12sp_label"
            android:background="@android:color/transparent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>