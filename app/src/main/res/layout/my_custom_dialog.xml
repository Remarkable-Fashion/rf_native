<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_radi5_white"
    android:paddingTop="30dp"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:paddingBottom="30dp">
    <TextView
        android:id="@+id/dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 후 이용가능합니다."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/app_bar_label"
        android:textSize="18sp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_msg"
        android:layout_marginTop="18dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/negative_btn"
            style="@style/montserrat_medium_text"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/press_btn_greyblack"
            android:stateListAnimator="@null"
            android:text="취소"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@drawable/press_text_color"
            android:layout_weight="1"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/positive_btn"
            style="@style/montserrat_medium_text"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/press_btn_greyblack"
            android:stateListAnimator="@null"
            android:text="로그인하러 가기"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@drawable/press_text_color"
            android:layout_weight="1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>