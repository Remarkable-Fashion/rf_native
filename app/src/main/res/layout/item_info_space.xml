<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userInfo"
            type="com.lf.fashion.data.response.ModelInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radi3_line"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/style_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Style"
            style="@style/spoqa_16sp_sub_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            style="@style/spoqa_16sp_sub_label"
            app:layout_constraintTop_toBottomOf="@id/style_label"
            app:layout_constraintStart_toStartOf="@id/style_label"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/weight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            style="@style/spoqa_16sp_sub_label"
            app:layout_constraintTop_toBottomOf="@id/height_label"
            app:layout_constraintStart_toStartOf="@id/height_label"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/place_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place"
            style="@style/spoqa_16sp_sub_label"
            app:layout_constraintTop_toBottomOf="@id/weight_label"
            app:layout_constraintStart_toStartOf="@id/weight_label"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/space_middle_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/rectangle_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/place_label" />

        <TextView
            android:id="@+id/introduce_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction"
            style="@style/spoqa_16sp_sub_label"
            app:layout_constraintTop_toBottomOf="@id/space_middle_line"
            app:layout_constraintStart_toStartOf="@id/weight_label"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/introduce_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{userInfo.introduce}"
            tools:text="안녕하세요 반갑습니다."
            style="@style/spoqa_14sp_default_color"
            app:layout_constraintTop_toBottomOf="@id/introduce_label"
            app:layout_constraintStart_toStartOf="@id/introduce_label"
            android:layout_marginTop="10dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/style_chip_group"
            android:layout_width="0dp"
            android:maxWidth="300dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            app:chipSpacingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="@id/style_label"
            app:layout_constraintBottom_toBottomOf="@id/style_label"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/height_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintBaseline_toBaselineOf="@id/height_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:text='@{userInfo.height!=null?userInfo.height+`cm`:""}'
            tools:text="160cm"
            style="@style/spoqa_16sp_sub_label"
            android:textColor="@color/default_text" />

        <TextView
            android:id="@+id/weight_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/weight_label"
            app:layout_constraintEnd_toEndOf="@id/height_value"
            android:text='@{userInfo.weight!=null?userInfo.weight+`kg`:""}'
            tools:text="48kg"
            style="@style/spoqa_16sp_sub_label"
            android:textColor="@color/default_text" />

        <TextView
            android:id="@+id/place_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/place_label"
            app:layout_constraintEnd_toEndOf="@id/height_value"
            android:text="@{userInfo.place}"
            tools:text="광명 이케아"
            style="@style/spoqa_16sp_sub_label"
            android:textColor="@color/default_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>