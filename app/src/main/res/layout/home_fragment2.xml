<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/home_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
      >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_sandwich" />

            <TextView
                android:id="@+id/app_bar_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/random_fashion"
                android:textColor="@color/default_text"
                android:textSize="19sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/app_bar_photo_filter_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="17dp"
                android:src="@drawable/ic_filter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:src="@drawable/ic_ellipse_purple"
                app:layout_constraintStart_toEndOf="@id/app_bar_photo_filter_btn"
                app:layout_constraintTop_toTopOf="@id/app_bar_photo_filter_btn" />

            <TextView
                android:id="@+id/app_bar_following"
                style="@style/app_bar_label"
                android:textColor="@drawable/selector_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="팔로잉"
                app:layout_constraintStart_toEndOf="@id/ic_new"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="12dp"
                android:clickable="true"
                android:textIsSelectable="true"
                />

            <TextView
                android:id="@+id/app_bar_random"
                style="@style/app_bar_label"
                android:textColor="@drawable/selector_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="12dp"
                android:text="랜덤"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/ic_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/montserrat_bold"
                android:text="N"
                android:textColor="@color/design_default_color_primary"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@id/app_bar_random"
                app:layout_constraintTop_toTopOf="@id/app_bar_random" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/app_bar_photo_grid_mode_btn"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_black_radi2"
                android:fontFamily="@font/montserrat_bold"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/app_bar_photo_filter_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.helper.widget.Layer
                android:id="@+id/top_random_menu_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="ic_new,app_bar_random"
                tools:ignore="MissingConstraints"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/home_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/home_vertical_item"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/home_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/home_grid_item"
        app:spanCount="3"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:visibility="invisible"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="0dp"
        android:background="@drawable/bg_bottom_sheet"
        android:gravity="center_horizontal"
        android:paddingBottom="40dp"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08" />
        <View
            android:id="@+id/bottom_line"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_grey2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:id="@+id/bottom_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_line"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_sheet_link_copy_btn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_link"
                android:drawablePadding="8dp"
                android:text="링크 복사하기"
                android:background="@drawable/selector_btn_whitegrey"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="27dp"
                android:paddingBottom="27dp"
                android:layout_marginEnd="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_sheet_share_btn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_share"
                android:drawablePadding="8dp"
                android:text="공유하기"
                android:background="@drawable/selector_btn_whitegrey"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="27dp"
                android:paddingBottom="27dp"
                android:textColor="@color/default_text"
                android:layout_marginEnd="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_sheet_scrap_btn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_scrap_unselected_default_color"
                android:drawablePadding="8dp"
                android:text="북마크하기"
                android:background="@drawable/selector_btn_whitegrey"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="27dp"
                android:paddingBottom="27dp"
                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/no_interest_btn"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:background="@drawable/selector_btn_whitegrey"
            android:layout_marginTop="10dp"
            android:text="관심없음"
            app:layout_constraintTop_toBottomOf="@id/bottom_linear"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_follow_btn"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:background="@drawable/selector_btn_whitegrey"
            android:layout_marginTop="10dp"
            android:text="팔로우 취소"
            app:layout_constraintTop_toBottomOf="@id/no_interest_btn"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/block_btn"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:background="@drawable/selector_btn_whitegrey"
            android:layout_marginTop="10dp"
            android:text="차단하기"
            app:layout_constraintTop_toBottomOf="@id/cancel_follow_btn"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/declare_btn"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:background="@drawable/selector_btn_whitegrey"
            android:layout_marginTop="10dp"
            android:text="신고하기"
            app:layout_constraintTop_toBottomOf="@id/block_btn"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
            android:textColor="@color/lf_orange"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
