<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/sandwich_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_btn"
        android:layout_marginEnd="17dp"
        android:src="@drawable/ic_sandwich" />
    <TextView
        android:id="@+id/photo_filter_sub_title"
        style="@style/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_photo_sub_title"
        app:layout_constraintStart_toStartOf="@id/photo_filter_title"
        app:layout_constraintTop_toBottomOf="@id/photo_filter_title" />

    <TextView
        android:id="@+id/photo_filter_title"
        style="@style/app_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/upload_photo_title"
        app:layout_constraintStart_toStartOf="@id/back_btn"
        app:layout_constraintTop_toBottomOf="@id/back_btn" />

    <View
        android:id="@+id/title_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/photo_filter_sub_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_underline"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp">
            <include
                android:id="@+id/filter_space"
                layout="@layout/item_filter_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/clothes_detail_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
                app:layout_constraintTop_toBottomOf="@id/filter_space"
                android:layout_marginTop="27dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                />
            <TextView
                android:id="@+id/introduce_label"
                style="@style/montserrat_bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/introduction_label"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/clothes_detail_rv"/>

            <EditText
                android:id="@+id/introduce_value"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_radi3_line"
                app:layout_constraintTop_toBottomOf="@id/introduce_label"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
                android:layout_marginTop="7dp"
                android:textColor="@color/default_text"
                style="@style/spoqa_12sp_label"
                android:maxLength="50"
                android:padding="15dp"
                android:singleLine="false"
                android:scrollHorizontally="false"
                />
            <TextView
                android:id="@+id/text_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/50"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintEnd_toEndOf="@id/introduce_value"
                app:layout_constraintBottom_toBottomOf="@id/introduce_value"
                style="@style/montserrat_medium_12"

                />
            <CheckBox
                android:id="@+id/not_post_now"
                style="@style/spoqa_12sp_label"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_checkbox2"
                android:button="@null"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/introduce_value"
                app:layout_constraintStart_toStartOf="@id/introduce_value" />
            <TextView
                android:id="@+id/checkbox_label3"
                style="@style/spoqa_14_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시물 미게시"
                android:textColor="@color/default_text"
                app:layout_constraintBaseline_toBaselineOf="@id/not_post_now"
                app:layout_constraintStart_toEndOf="@id/not_post_now"
                android:layout_marginStart="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_btn_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintWidth_percent="0.43"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/not_post_now"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_grey_btn"
                android:text="이전"
                style="@style/montserrat_bold_14"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintWidth_percent="0.43"
                android:background="@drawable/bg_black_btn"
                android:text="다음"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
                app:layout_constraintTop_toTopOf="@id/back_btn_2"
                android:layout_marginStart="10dp"
                style="@style/montserrat_bold_14"
                android:textColor="@color/white"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>