<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_radi3_line"
    android:padding="15dp">
    <ImageView
        android:id="@+id/clothes_image"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:scaleType="centerCrop"
        tools:src="@color/default_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/clothes_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outer"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toEndOf="@id/clothes_image"
        app:layout_constraintTop_toTopOf="@id/clothes_image"
        style="@style/montserrat_bold_label" />
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="셋업 멜로샤 트위드 자켓"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/clothes_type_label"
        app:layout_constraintTop_toBottomOf="@id/clothes_type_label"
        style="@style/spoqa_14sp_blod_default"
        />
    <TextView
        android:id="@+id/product_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보세"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintStart_toStartOf="@id/product_name"
        style="@style/spoqa_12sp_label_bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블랙(black) | M 사이즈 | 96,000원"
        app:layout_constraintStart_toStartOf="@id/product_brand"
        app:layout_constraintTop_toBottomOf="@id/product_brand"
        android:layout_marginTop="9dp"
        style="@style/spoqa_12sp_label"
        />
</androidx.constraintlayout.widget.ConstraintLayout>