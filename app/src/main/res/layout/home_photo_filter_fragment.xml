<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cancel_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cancel_btn"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        android:layout_marginTop="14dp"
        android:text="어떤 패션이 궁금하세요?"
        style="@style/app_bar_label"
        />
    <TextView
        android:id="@+id/photo_filter_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취향에 딱 맞는 패션을 보여드릴게요"
        app:layout_constraintTop_toBottomOf="@id/photo_filter_title"
        app:layout_constraintStart_toStartOf="@id/photo_filter_title"
        style="@style/subtitle"
        />

    <View
        android:id="@+id/title_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/photo_filter_sub_title"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        app:layout_constraintTop_toBottomOf="@id/title_underline"
        app:layout_constraintStart_toStartOf="@id/photo_filter_title"
        android:layout_marginTop="32dp"
        style="@style/montserrat_bold_label"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gender_man_btn"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.44"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/gender_label"
        android:layout_marginTop="15dp"
        android:text="MAN"
        style="@style/montserrat_medium_text"
        android:textColor="@drawable/selector_text_color"
        android:background="@drawable/selector_btn_greyblack"
        android:stateListAnimator="@null"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gender_woman_btn"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.44"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/gender_man_btn"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintBaseline_toBaselineOf="@id/gender_man_btn"
        android:text="WOMAN"
        style="@style/montserrat_medium_text"
        android:textColor="@drawable/selector_text_color"
        android:background="@drawable/selector_btn_greyblack"
        android:stateListAnimator="@null"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <TextView
        android:id="@+id/height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        app:layout_constraintTop_toBottomOf="@id/gender_man_btn"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        android:layout_marginTop="30dp"
        style="@style/montserrat_bold_label"
        />

    <CheckBox
        android:id="@+id/height_check_box"
        android:layout_width="21dp"
        android:layout_height="21dp"
        app:layout_constraintBaseline_toBaselineOf="@id/height_label"
        app:layout_constraintEnd_toStartOf="@id/checkbox_label"
        style="@style/spoqa_12sp_label"
        android:button="@null"
        android:gravity="center"
        android:background="@drawable/selector_checkbox"
        android:layout_marginEnd="4dp"
       />
    <TextView
        android:id="@+id/checkbox_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 정보 입력"
        style="@style/spoqa_12sp_label"
        app:layout_constraintBaseline_toBaselineOf="@id/height_check_box"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        />

    <EditText
        android:id="@+id/height_value"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/height_label"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_edittext"/>

    <TextView
        android:id="@+id/weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        app:layout_constraintTop_toBottomOf="@id/height_value"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        android:layout_marginTop="30dp"
        style="@style/montserrat_bold_label"
        />

    <CheckBox
        android:id="@+id/weight_check_box"
        android:layout_width="21dp"
        android:layout_height="21dp"
        app:layout_constraintBaseline_toBaselineOf="@id/weight_label"
        app:layout_constraintEnd_toStartOf="@id/checkbox_label2"
        android:button="@null"
        android:gravity="center"
        android:background="@drawable/selector_checkbox"
        android:layout_marginEnd="4dp"
        />
    <TextView
        android:id="@+id/checkbox_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 정보 입력"
        style="@style/spoqa_12sp_label"
        app:layout_constraintBaseline_toBaselineOf="@id/weight_check_box"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        />
    <EditText
        android:id="@+id/weight_value"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/weight_label"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_edittext"
        />

    <View
        android:id="@+id/filterchip_topline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_grey"
        app:layout_constraintTop_toBottomOf="@id/weight_value"
        android:layout_marginTop="30dp"/>

    <include layout="@layout/home_photo_filter_chip_item"
        app:layout_constraintTop_toBottomOf="@id/filterchip_topline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>