<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="18dp">
    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/montserrat_bold_label"
        />
    <ImageView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:background="@drawable/bg_radi3_line"
        app:layout_constraintTop_toBottomOf="@id/card_name"
        android:layout_marginTop="7dp"
        />
    <include
        android:id="@+id/profile_space"
        layout="@layout/item_profile_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintEnd_toEndOf="@id/card"
        android:layout_margin="15dp"
        />
    <View
        android:id="@+id/title_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/profile_space" />
    <include
        android:id="@+id/clothes_space"
        layout="@layout/item_clothes_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_underline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        style="@style/spoqa_12sp_label"
        android:textColor="@color/default_text"
        app:layout_constraintStart_toStartOf="@id/profile_space"
        app:layout_constraintEnd_toEndOf="@id/profile_space"
        app:layout_constraintTop_toBottomOf="@id/clothes_space"
        android:background="@drawable/bg_radi3_filled_no_line"
        android:text="제 생각엔 이 디자인이 더 잘어울릴 것 같아요!"/>
</androidx.constraintlayout.widget.ConstraintLayout>