<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="18dp"
       android:background="@drawable/bg_radi3_line">
      <ImageView
          android:layout_width="21dp"
          android:layout_height="21dp"
          android:src="@drawable/ic_heart"
         android:layout_marginEnd="5dp"
          app:layout_constraintTop_toTopOf="@id/likes_value"
          app:layout_constraintEnd_toStartOf="@id/likes_value"
          />
      <TextView
          android:id="@+id/likes_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="150"
          android:layout_marginTop="13dp"
          android:layout_marginEnd="10dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          style="@style/main_bottom_menu_label"

          />
      <include
          android:id="@+id/included_cloth_space"
          layout="@layout/item_clothes_space" />
   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>