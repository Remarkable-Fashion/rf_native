<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--https://stackoverflow.com/questions/3078662/how-to-change-the-border-and-separator-color-of-spinner-widget-->


    <!--<View
        android:id="@+id/title_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/tab" />-->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        app:tabSelectedTextColor="@color/default_text"
        app:tabIndicatorColor="@color/default_text"
        app:tabIndicatorHeight="3dp"
        app:tabTextAppearance="@style/montserrat_bold_label_grey"
        />
    <LinearLayout
        android:id="@+id/order_by_space"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background_grey"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tab"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/order_by_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기순"
            android:layout_marginEnd="10dp"
            style="@style/spoqa_12sp_default"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/app_bar_photo_grid_mode_btn"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/bg_black_radi2"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/_3"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:id="@+id/filter"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_filter"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
            app:layout_constraintTop_toBottomOf="@id/title_underline" />

    </LinearLayout>
<!--    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/order_by_space"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/search_look_grid_fragment"/>-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/order_by_space"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>