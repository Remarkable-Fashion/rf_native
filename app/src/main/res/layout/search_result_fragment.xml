<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--https://stackoverflow.com/questions/3078662/how-to-change-the-border-and-separator-color-of-spinner-widget-->


    <!--<View
        android:id="@+id/title_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/tab" />-->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        app:tabSelectedTextColor="@color/default_text"
        app:tabIndicatorColor="@color/default_text"
        app:tabIndicatorHeight="3dp"
        app:tabTextAppearance="@style/montserrat_bold_label_grey"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/order_by_space"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/background_grey"
            app:layout_constraintTop_toBottomOf="@id/tab"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">

 <!--       <TextView
            android:id="@+id/order_by_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기순"
            android:layout_marginEnd="3dp"
            android:padding="10dp"
            style="@style/spoqa_12sp_default"
            app:layout_constraintEnd_toStartOf="@id/app_bar_photo_grid_mode_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>-->
            <Spinner
                android:id="@+id/order_by_spinner"
                android:layout_width="83dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toStartOf="@id/app_bar_photo_grid_mode_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bg_spinner"
                android:theme="@style/spoqa_12sp_lf_grey"
                />

        <ImageView
            android:id="@+id/app_bar_photo_grid_mode_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/bg_black_radi2"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@id/filter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                android:id="@+id/grid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/_3"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/app_bar_photo_grid_mode_btn"
            app:layout_constraintBottom_toBottomOf="@id/app_bar_photo_grid_mode_btn"
            app:layout_constraintStart_toStartOf="@id/app_bar_photo_grid_mode_btn"
            app:layout_constraintEnd_toEndOf="@id/app_bar_photo_grid_mode_btn"
            />
        <ImageView
            android:id="@+id/filter"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_filter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="5dp"
            />
            <androidx.constraintlayout.helper.widget.Layer
                android:id="@+id/grid_mode_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="grid_text,app_bar_photo_grid_mode_btn"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/order_by_space"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/search_look_grid_fragment"/>-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/order_by_space"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>