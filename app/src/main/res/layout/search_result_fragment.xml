<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:id="@+id/sex_spinner"
        android:layout_width="73dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/tab"
        android:background="@drawable/bg_spinner"
        android:theme="@style/spoqa_12sp_lf_grey"
        />

    <Spinner
        android:id="@+id/height_spinner"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/sex_spinner"
        app:layout_constraintTop_toTopOf="@id/sex_spinner"
        android:background="@drawable/bg_spinner"
        android:theme="@style/spoqa_12sp_lf_grey"
        />

    <Spinner
        android:id="@+id/weight_spinner"
        android:layout_width="83dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/height_spinner"
        app:layout_constraintTop_toTopOf="@id/sex_spinner"
        android:background="@drawable/bg_spinner"
        android:theme="@style/spoqa_12sp_lf_grey"/>

    <View
        android:id="@+id/title_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/sex_spinner" />
    <ImageView
        android:id="@+id/filter"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintTop_toTopOf="@id/sex_spinner" />


    <LinearLayout
        android:id="@+id/order_by_space"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background_grey"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title_underline"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/order_by_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기순"
            android:layout_marginEnd="10dp"
            style="@style/spoqa_12sp_default"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/app_bar_photo_grid_mode_btn"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/bg_black_radi2"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/_3"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
<!--    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/order_by_space"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/search_look_grid_fragment"/>-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="fixed" />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/order_by_space"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>