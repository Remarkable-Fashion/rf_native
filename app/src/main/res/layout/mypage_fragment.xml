<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/sandwich_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_sandwich" />
    <TextView
        android:id="@+id/look_book_title"
        style="@style/app_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:text="rf_user님의 룩북"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sandwich_btn" />
    <View
        android:id="@+id/title_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/look_book_title" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_underline"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:background="@color/profile_back_grey"
                android:layout_marginTop="24dp"
                app:shapeAppearance="@style/radi20"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/setting_btn"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/ic_setting"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
                app:layout_constraintTop_toTopOf="@id/profile_image"
                />
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintStart_toEndOf="@id/profile_image"
                app:layout_constraintTop_toTopOf="@id/profile_image"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                style="@style/montserrat_bold_label"
                tools:text="rf_user"/>

            <TextView
                android:id="@+id/profile_user_info"
                style="@style/montserrat_medium_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintStart_toStartOf="@id/profile_name"
                app:layout_constraintTop_toBottomOf="@id/profile_name"
                tools:text="여 | 162cm | 48kg" />
            <TextView
                android:id="@+id/introduce_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{userInfo.introduce}"
                tools:text="안녕하세요 반갑습니다.\n 제 피드에 자주 놀러오세용 맞팔해용"
                style="@style/spoqa_14sp_default_color"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                app:layout_constraintStart_toStartOf="@id/profile_image"
                android:layout_marginTop="10dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profile_edit_btn"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:text="프로필 수정하기"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/introduce_value"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
                android:background="@drawable/bg_grey_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="14sp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textColor="@color/light_text"
                />

            <LinearLayout
                android:id="@+id/user_post_info_space"
                android:layout_width="0dp"
                android:layout_height="83dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_radi5_line"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_btn"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시물\n1000"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/spoqa_14sp_default_color"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:background="@color/rectangle_grey"/>
                <TextView
                    android:id="@+id/follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로워\n1000"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/spoqa_14sp_default_color"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:background="@color/rectangle_grey"/>

                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로잉\n 1000"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/spoqa_14sp_default_color"
                    />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/grid_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/home_grid_item"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/user_post_info_space"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>