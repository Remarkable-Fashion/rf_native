<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/cancel_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sandwich_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cancel_btn"
        android:layout_marginEnd="17dp"
        android:src="@drawable/ic_sandwich" />

    <TextView
        android:id="@+id/recommend_title"
        style="@style/app_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="이 의상은 어때?"
        app:layout_constraintStart_toStartOf="@id/cancel_btn"
        app:layout_constraintTop_toBottomOf="@id/cancel_btn" />
    <TextView
        android:id="@+id/recommend_sub_title"
        style="@style/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="룩북에 어울리는 아이템과 나의 생각을 공유해보세요!"
        app:layout_constraintStart_toStartOf="@id/recommend_title"
        app:layout_constraintTop_toBottomOf="@id/recommend_title" />
    <View
        android:id="@+id/title_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/recommend_sub_title" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_underline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="55dp">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                >
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="83dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_spinner"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/order_by_best_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_btn_greylineblack"
                    android:layout_marginEnd="10dp"
                    android:textColor="@drawable/selector_text_color"
                    style="@style/spoqa_12sp_label"
                    android:text="베스트"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/order_by_recent_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_btn_greylineblack"
                    android:layout_marginEnd="10dp"
                    android:textColor="@drawable/selector_text_color"
                    style="@style/spoqa_12sp_label"
                    android:text="최신순"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_btn_greylineblack"
                    android:textColor="@drawable/selector_text_color"
                    style="@style/spoqa_12sp_label"
                    android:text="+"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/style_recommend_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linear"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                tools:listitem="@layout/item_recommend_style_card"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>