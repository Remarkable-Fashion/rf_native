<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/like_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:src="@drawable/selector_heart_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/likes_value"
        style="@style/main_bottom_menu_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/like_btn"
        app:layout_constraintStart_toStartOf="@+id/like_btn"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/like_btn"
        tools:text="130" />

    <ImageView
        android:id="@+id/photo_zip_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_image"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/likes_value"

        />


    <ImageView
        android:id="@+id/share_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_share_unselected"
        app:layout_constraintEnd_toStartOf="@id/scrap_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:paddingEnd="5dp"
        />

    <ImageView
        android:id="@+id/scrap_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:paddingEnd="5dp"
        android:src="@drawable/selector_scrap_greyblack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/kebab_btn"/>

    <ImageView
        android:id="@+id/kebab_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:src="@drawable/ic_dot_unselected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/like_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="like_btn,likes_value"
        tools:ignore="MissingConstraints"
        />
 <!--   <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/photo_zip_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="photo_zip_btn"
        tools:ignore="MissingConstraints"
        android:padding="5dp"
        />-->
</androidx.constraintlayout.widget.ConstraintLayout>